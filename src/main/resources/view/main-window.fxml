<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cs2103.gui.MainWindow"
            prefWidth="420" prefHeight="520">

    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER">
            <content>
                <VBox fx:id="dialogContainer" spacing="8">
                    <padding>
                        <Insets topRightBottomLeft="10"/>
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <HBox spacing="8">
            <padding>
                <Insets topRightBottomLeft="10"/>
            </padding>
            <TextField fx:id="userInput"
                       HBox.hgrow="ALWAYS"
                       onAction="#handleUserInput"
                       promptText="Type a command... (e.g., todo read book)"/>
            <Button fx:id="sendButton" text="Send" onAction="#handleUserInput"/>
        </HBox>
    </bottom>
</BorderPane>